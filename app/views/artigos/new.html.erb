<h1>Criar um novo Artigo</h1>

<% if @artigo.errors.any? %>
    <ul>
        <% @artigo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :artigo, url: artigos_path, local: true do |f| %>

<p>
    <%= f.label :nome %> <br>
    <%= f.text_field :nome %>
</p>

<p>
    <%= f.label :descricao %> <br>
    <%= f.text_area :descricao %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>